{
  "extends": "expo/tsconfig.base",
  "compilerOptions": {
    "strict": true,
    "noImplicitAny": true,
    "moduleResolution": "node",
    "baseUrl": ".",
    "paths": {
      "@/components/*": ["components/*"],
      "@/hooks/*": ["hooks/*"],
      "@/lib/*": ["lib/*"],
      "@/types": ["types"]
    }
  },
  "include": ["**/*.ts", "**/*.tsx", "__tests__/**/*.ts"],
  "exclude": ["node_modules", "babel.config.js", "metro.config.js"]
}
